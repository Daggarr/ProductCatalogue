<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
          crossorigin="anonymous">

    <title>Products.ProductCatalogue</title>
</head>
<body>
    <p class="h1 text-primary mx-5 my-3">Products</p>
    <p class="h6 text-primary mx-5"><a href="/products/create">Create</a></p>

    <div class="list-group">
        {% for product in products.getProducts %}
            <a href="/products/{{ product.getId }}" class="list-group-item list-group-item-action">{{ product.getName }} ({{ product.getQuantity }})</a>
        {% endfor %}
    </div>
    <br>
    <form method="get" action="/products" id="product">
        <select class="form-select w-50" form="product" name="category">
            <option selected value="">Choose a filter</option>
            <option value="vegetable">Vegetable</option>
            <option value="fruit">Fruit</option>
            <option value="milk">Milk product</option>
            <option value="meat">Meat</option>
            <option value="flour">Flour product</option>
        </select>

        <br>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="tags[]" value="bio" id="1">
            <label class="form-check-label" for="1">
                Bio
            </label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="tags[]" value="discount" id="2">
            <label class="form-check-label" for="2">
                Discount
            </label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="tags[]" value="vegan" id="3">
            <label class="form-check-label" for="3">
                Vegan
            </label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="tags[]" value="vegetarian" id="4">
            <label class="form-check-label" for="4">
                Vegetarian
            </label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="tags[]" value="dairy" id="5">
            <label class="form-check-label" for="5">
                Dairy
            </label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="tags[]" value="gluten" id="6">
            <label class="form-check-label" for="6">
                Gluten
            </label>
        </div>

        <br>
        <button type="submit" class="btn btn-primary">Filter</button>
    </form>
    <br>
    <br>
    <p class="h6 text-primary mx-5"><a href="/products">Reset filter</a></p>
    <p class="h6 text-primary mx-5"><a href="/">LOGOUT</a></p>
</body>
</html>